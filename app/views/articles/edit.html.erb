<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>MY BLOG</title>

    <!-- Bootstrap core CSS -->
    <%= stylesheet_link_tag "bootstrap.min" %>

    <!-- Custom fonts for this template -->
    <%= stylesheet_link_tag "font-awesome" %>
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <%= stylesheet_link_tag "clean-blog.min" %>


  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand" href="../../">MY BLOG</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="../">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="../articles">Articles</a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link" href="../../contact">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Header -->
    <header class="masthead">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1>Update Article</h1>
              
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                	<%= form_with model: @article, local: true do |form| %>
 
  						<p>
  							<div class="row control-group">
    						<%= form.label :Title %><br>
    						</div>
    						<div class="row control-group">
    							<div class="form-group col-xs-12 floating-label-form-group controls">
    								<%= form.text_field 'title', :class => 'form-control' %>
                                <p class="help-block text-danger"></p>
                            	</div>
                        	</div>
    						
  						</p>
						 
  						<p>
  							<div class="row control-group">
    						<%= form.label :Text %><br>
    						</div>

    						<div class="row control-group">
                            	<div class="form-group col-xs-12 floating-label-form-group controls">
                                	<%= form.text_area 'text', :class => 'form-control', :rows => '5'%>                                	
                            	</div>
                        	</div>
  						</p>
						 
  						<p>
  							<br>
                        	<div class="row">
                            	<div class="form-group col-xs-12">
                            		<%= form.submit 'Update', :class => 'btn btn-success btn-lg' %>
                            	</div>
  						</p>
						 
					<% end %>
                </div>
            </div>
        </div>
    </section>


    <hr>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            
            <p class="copyright text-muted">Copyright &copy; Jiajian Zhang 2018</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <%= javascript_include_tag "bootstrap.min" %>
    <%= javascript_include_tag "jquery.min" %>

    <!-- Custom scripts for this template -->
    <%= javascript_include_tag "clean-blog.min" %>

  </body>

</html>